import java.util.*;
public class BelajarPenjumlahan
{
  public static void main(String[]args)
  {
    Scanner br=new Scanner(System.in);
    
    int soal;
    int bilangan;
    int jawaban;
    int total=0;
    int hitung=1;
    
    System.out.print("Masukkan jumlah soal :");
    soal=br.nextInt();
    
    while (hitung<=soal)
    {
       double bilx=Math.random()*10;
       double bily=Math.random()*10;
       bilangan =(int) bilx + (int) bily;
       System.out.print(hitung + "." + " " +(int) bilx + "+" + (int)bily + "=");
       jawaban=br.nextInt();
       
       if (bilangan==jawaban){
         total=total+10;
       }
       
       hitung++;
     }
    System.out.print("Nilai Anda =" +" "+total);
  }
}
      
